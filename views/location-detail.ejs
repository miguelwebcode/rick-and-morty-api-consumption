<%- include('partials/header.ejs') %> <%if(locals.location){%>
<div class="detailContainer">
  <h1 class="pageTitle"><%=locals.location.name%></h1>
  <div class="detailData">
    <div class="propertyContainer">
      <p class="propertyParagraph">Type:</p>
      <form id="myForm" method="post">
        <input
          class="linkButton"
          type="submit"
          value="<%=locals.location.type%>"
          formaction="/search"
        />
        <input type="hidden" name="searchProperty" value="type" />
        <input
          type="hidden"
          name="searchValue"
          value="<%=locals.location.type%>"
        />
        <input type="hidden" name="endPoint" value="location" />
      </form>
    </div>
    <div class="propertyContainer">
      <p class="propertyParagraph">Dimension:</p>
      <p class="dataParagraph"><%=locals.location.dimension%></p>
    </div>
  </div>
</div>
<p class="pageSubtitle">Residents:</p>
<%if(locals.location.residents.length > 0){%>
<ul class="noPointsUl">
  <div class="episodesContainer">
    <% locals.location.residents.forEach(resident => { %>
    <li>
      <div class="characterDiv">
        <img
          class="characterImage"
          src="<%=resident.image%>"
          alt="<%=resident.name%>"
        />
        <form id="myForm" method="post">
          <input
            class="darkButton"
            type="submit"
            value="<%=resident.name%>"
            formaction="/getCharacterById"
          />
          <input type="hidden" name="characterId" value="<%=resident.id%>" />
        </form>
      </div>
    </li>
    <% }); %>
  </div>
</ul>
<% } else { %>
<p class="noContent">No residents</p>
<% } %> <%} else {%>
<p class="noContent">Not receiving content</p>
<%}%> <%- include('partials/footer.ejs') %>
